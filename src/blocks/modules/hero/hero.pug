section.section.hero.my-0
    .container
        include ../header/header
        .row
            .col-xl-6
                .jumbotron.px-0
                    h1.hero-title.text-white Contractor Websites that Drive Traffic
                    p.hero-descr.text-white at $179/month
                    a.btn.btn-lg.btn-outline-primary(href='#', role='button') Get started

    .hero-video
        .hero-video--overlay
        video.hero-video--video(autoplay='', loop='', muted='')
            source(src='video/construction-zone-landing-vid-v2.mp4')
    .hero-social
        .container
            .row.align-content-center
                .col-xl-6.offset-xl-6
                    ul.social.justify-content-end.my-auto
                        li
                            a.social-link(href="#")
                                +svg('facebook')

                        li
                            a.social-link(href="#")
                                +svg('instagram')

                        li
                            a.social-link(href="#")
                                +svg('linkedin')
                        li

                            a.social-link(href="#")
                                +svg('twitter')




